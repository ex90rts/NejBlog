extend layout

block content
  form(name="postForm", action="/post/update/"+post._id, method="POST")
    div
      lable.addPostLabel Title
      input.postTitle(name="title", class="formControl", size="60", value=post.title, required="required")
      
    div
      label.addPostLabel Tags
      input.postTags(name="tags", class="formControl", size="60", value=post.tags, required="required")
      
    div
      label.addPostLabel Content
      textarea.postContent(name="content", class="formControl postContentField", required="required")=post.content
      
    div
      input.postSubmit(type="submit", value="Submit")
      
    div.divider
