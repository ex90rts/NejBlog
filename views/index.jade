extend layout

block content
  if postList
    each post in postList
      //h2 #{post.year}
      article
        span #{post.year}
        span(class='datetime') #{post.date}
        a.title(href='/post/view/#{post._id}', title='#{post.title}') #{post.title}
  else
    p #{langs.tip_nopost}<a href="/post/add">#{langs.nav_admin_addpost}</a>
